<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorBackground">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/hangman9"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            android:layout_marginBottom="40dp" android:paddingLeft="70dp"/>
    <TextView
            android:text="b _ a r _ _ c u e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:fontFamily="@font/lato"
            android:textSize="25dp"
            android:textColor="@color/buttonColor"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"/>
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:id="@+id/tableLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center"
                  android:id="@+id/tableRow">
            <Button
                    android:text="Q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonQ" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="W"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonW" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonE" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonR" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="T"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonT" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="Y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonY" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="U"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonU" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonI" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="O"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonO" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="P"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonP" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center"
                  android:paddingLeft="20dp" android:paddingRight="20dp">
            <Button
                    android:text="A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonA" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonS" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonD" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonF" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="G"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonG" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="H"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonH" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="J"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonJ" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="K"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonK" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="L"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonL" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center"
                  android:paddingLeft="60dp" android:paddingRight="60dp">
            <Button
                    android:text="Z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonZ" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="X"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonX" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonC" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="V"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonV" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonB" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="N"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonN" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
            <Button
                    android:text="M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonM" android:layout_weight="1"
                    android:layout_margin="3dp" android:background="@drawable/button_rounded"
                    android:fontFamily="@font/lato"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>