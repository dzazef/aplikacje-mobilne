                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button1_3" android:onClick="onClick"
                android:background="@color/buttonColor" android:layout_margin="3dp" android:layout_weight="1"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button1_4" android:onClick="onClick"
                android:background="@color/buttonColor" android:layout_margin="3dp" android:layout_weight="1"/>
