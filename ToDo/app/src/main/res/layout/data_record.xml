<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="90dp"
        android:layout_width="match_parent"
        android:background="#00ff00"
        android:id="@+id/root_data_record"
>

    <ImageView
            android:id="@+id/root_date_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_date_range_24px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.242"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="@+id/root_gdl_2"
            app:layout_constraintEnd_toStartOf="@+id/root_gdl_1" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp"/>

    <ImageView
            android:id="@+id/root_priority_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_swap_vert_24px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.20999998" app:layout_constraintHorizontal_bias="0.92"
            android:contentDescription="TODO"/>

    <TextView
            style="@style/Text.Secondary"
            android:id="@+id/root_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="godzina ghjghjghjghjghj"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.231"
            app:layout_constraintEnd_toStartOf="@+id/root_gdl_1"
            app:layout_constraintStart_toStartOf="@+id/root_gdl_2" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="32dp"/>

    <TextView
            style="@style/Text.Secondary"
            android:id="@+id/root_txt_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.20999998"
            app:layout_constraintHorizontal_bias="0.97"/>

    <TextView
            style="@style/Text.Primary"
            android:ellipsize="end"
            android:maxWidth="270dp"
            android:maxLines="1" android:id="@+id/root_txt_message"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            tools:text="abcdefghijklmnoprstuvwxyzabcdefghijklmnoprstuvwxyzabcdefghijklmnoprstuvwxyzabcdefghijklmnoprstuvwxyz"
            app:layout_constraintStart_toStartOf="@+id/root_gdl_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.746"
            app:layout_constraintEnd_toStartOf="@+id/root_gdl_1" app:layout_constraintHorizontal_bias="0.0"
    />

    <View android:layout_width="0dp" android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="@+id/root_gdl_1"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/root_v_priority_click"/>
    <android.support.constraint.Guideline
            android:id="@+id/root_gdl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85"
    />
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/root_gdl_2"
            app:layout_constraintGuide_percent="0.17"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_baseline_done_24px"
            android:id="@+id/root_imv_icon"
            app:layout_constraintEnd_toStartOf="@+id/root_gdl_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>

